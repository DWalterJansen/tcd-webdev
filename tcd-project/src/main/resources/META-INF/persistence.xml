    <class>io.anneeikedavid.security.empresa.Empresa</class>
    <class>io.anneeikedavid.security.categoria.Categoria</class>
    <class>io.anneeikedavid.security.cupom.Cupom</class>
    <class>io.anneeikedavid.security.produto.Produto</class>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
